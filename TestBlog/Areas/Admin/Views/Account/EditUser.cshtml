@model TestBlog.Core.ViewModels.Admin.Account.EditUserViewModel
@{
    ViewData["Title"] = "ویراش کاربر";
}

<div class="title text-start">
    <div class="container">
        <div class="col">
            <h2 class="page-title">
                ویراش کاربر
            </h2>
        </div>
    </div>
</div>


<div class="container">
    <hr>
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3 p-4">
                <form asp-area="Admin" asp-controller="Account" asp-action="EditUser" method="post">
                    <input type="hidden" asp-for="UserId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsBlocked" /> @Html.DisplayNameFor(model => model.IsBlocked)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsMobileActive" /> @Html.DisplayNameFor(model => model.IsMobileActive)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ذخیره" class="btn btn-success" /> | <a asp-area="Admin" asp-controller="Account" asp-action="filterUser">مدیریت کاربران</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
