<html dir="rtl" lang="fa">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/AdminTemplate/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="~/AdminTemplate/css/main.css">
    <link rel="stylesheet" href="~/AdminTemplate/css/media.css">
    <link rel="stylesheet" href="~/AdminTemplate/Fonts/fontawesome/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" type="iamge/x-icon" href="~/AdminTemplate/img/logo.png">
    <link rel="stylesheet" href="~/TestBlog.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/notifications.css" asp-append-version="true" />
    <title>@ViewData["Title"]</title>
</head>
<body class="bg-light-Purple">

    <!-- header -->
    <header class="navbar navbar-expand-md navbar-light d-print-none header-nav">
        <div class="container-xl">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
                <a href="/">
                    <img src="~/AdminTemplate/img/logo.png" width="50" />
                </a>
            </h1>
            <div class="navbar-nav flex-row order-md-last">

                <div class="nav-item d-none d-md-flex me-3">
                    <div class="header-btn-list">
                        <a href="#" class="btn" target="_blank">
                            <span><i class="fa fa-headphones"></i></span>
                            تماس با پشتیبانی
                        </a>
                        <a href="#" class="btn" target="_blank">
                            <span><i class="fa fa-pencil"></i></span>
                            قوانین
                        </a>
                    </div>
                </div>


                <div class="nav-item dropdown">
                    <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu" aria-expanded="false">
                        <img src="~/AdminTemplate/img/Default-Avatar.png" class="img-admin" alt="">
                        <div class="small ps-2">
                            <div>
                                @User.Identity.Name
                            </div>
                            <div class="mt-2 small text-muted">
                                مدیر
                            </div>
                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <a href="#" class="dropdown-item">اطلاعات فنی</a>
                        <a href="#" class="dropdown-item">حساب کاربری</a>
                    </div>
                </div>

            </div>
        </div>
    </header>

    <!-- navbar -->
    <nav class="navbar navbar-expand-md navbar-light">
        <button class="navbar-toggler collapsed bg-primary ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample"
                aria-expanded="false" aria-label="Toggle navigation" aria-controls="offcanvasExample">
            <i class="fa fa-bars text-light"></i>
        </button>

        <div class="collapse navbar-collapse " id="navbar-content">
            <div class="container">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link text-sm" aria-current="page" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> داشبورد</a>
                    </li>


                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-sm" href="#" data-bs-toggle="dropdown" data-bs-auto-close="outside"><i class="fa fa-cog"></i> دسترسی ها</a>
                        <div class="dropdown-menu shadow animate slideIn">
                            <div class="col-12 col-sm-4 col-md-6">

                                <div class="navbar-list">

                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Blog" asp-action="FilterBlogs">مقاله</a>

                                </div>

                            </div>
                        </div>
                    </li>

                </ul>
            </div>

        </div>

        <div class="offcanvas offcanvas-start offcanvas-width offcanvas-width" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <a href="/" class="logo">
                    <img src="~/OrginalTemplate/assets/img/index/logo/logo.png" alt="Molla Logo" width="50">
                </a>
                <button type="button" class="btn btn-primary p-2 rounded-3" data-bs-dismiss="offcanvas" aria-label="Close">
                    <i class="fa fa-close text-light"></i>
                </button>
            </div>
            <div class="offcanvas-body">
                <h4 class="text-muted">منو دسترسی</h4>
                <hr>
                <div class="offcanvas-border"></div>

                <ul class="navbar-nav mr-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link text-sm" aria-current="page" href="#">داشبورد</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-sm" href="#" data-bs-toggle="dropdown" data-bs-auto-close="outside"><i class="fa fa-cog"></i> دسترسی ها</a>
                        <div class="dropdown-menu mega-content animate slideIn">
                            <div class="row">

                                <div class="col-12 col-sm-4 col-md-6">

                                    <div class="navbar-list">

                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Blog" asp-action="FilterBlogs">مقاله</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Jewellery" asp-action="FilterJewelleries">پست جواهرات</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Text" asp-action="FilterText">متن ها</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="FilterCategories">دسته بندی</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="FilterProducts">محصولات</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="ProductGallery" asp-action="FilterGallery">گالری تصاویر</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="FilterUser">کاربران</a>

                                    </div>

                                </div>

                            </div>
                        </div>
                    </li>

                </ul>

            </div>
        </div>


    </nav>

    @RenderBody()

    <!-- footer -->
    <footer class="footer footer-transparent d-print-none mt-3">
        <div class="container-xl">
            <div class="row text-center align-items-center flex-row-reverse">
                <div class="col-lg-auto ms-lg-auto">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item"><a href="/" class="link-secondary">صفحه اصلی</a></li>
                    </ul>
                </div>
                <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item">
                            <p>
                                تمامی حقوق مادی و معنوی این سایت متعلق به
                                <a href="." class="link-secondary fw-bold"> فروشگاه تینوپک</a>
                                است.
                            </p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/AdminTemplate/js/bootstrap.min.js"></script>
    <script src="~/AdminTemplate/js/jquery-3.6.0.min.js"></script>
    @*<script src="~/AdminTemplate/js/global.js"></script>*@
    @*<script src="~/AdminTemplate/js/sweetalert2@11.js"></script>*@
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_Message" />
</body>
</html>