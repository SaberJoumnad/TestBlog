@model TestBlog.Core.ViewModels.Site.Account.RegisterUserViewModel

@{
    ViewData["Title"] = "ثبت نام";
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>ثبت نام</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="mb-3">
                            <label class="form-label">شماره موبایل</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">نام</label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">نام خانوادگی</label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">رمز عبور</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">تایید رمز عبور</label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">ثبت نام</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>